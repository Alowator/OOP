<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.nsu.alowator.Controller">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="Game">
                <MenuItem mnemonicParsing="false" onAction="#newAction" text="New Game"/>
                <MenuItem mnemonicParsing="false" onAction="#exitAction" text="Exit"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" text="About"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <HBox BorderPane.alignment="CENTER">
            <Canvas fx:id="canvas" focusTraversable="true" onKeyPressed="#keyHandler"/>
        </HBox>
    </center>
</BorderPane>
